pipeline {
    agent {
        docker {
            image 'node:lts-buster-slim'
            args '-p 3000:3000'
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Setup & Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
                sh 'npm start & echo $! > .pidfile'
                input message: 'ğŸ” ç¶²é å•Ÿå‹•ä¸­ï¼Œè«‹æ‰“é–‹ http://<Jenkins_IP>:3000 æŸ¥çœ‹ã€‚çœ‹å®Œå¾ŒæŒ‰ Proceed'
            }
        }
        stage('Shutdown') {
            steps {
                sh 'kill $(cat .pidfile)'
            }
        }
    }
}
